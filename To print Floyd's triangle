 #include <stdio.h>

int main()
{
    int n, num = 1, row, col;

    printf("Enter the number of rows: ");
    scanf("%d", &n);

    for(row = 1; row <= n; row++)
    {
        for(col = 1; col <= row; col++)
        {
            printf("%d ", num);
            num++;
        }

        printf("\n");
    }

    return 0;
}
